<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="1">


    <victor.doctorswall.components.MyFontButton
        android:id="@+id/sdffdsf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:background="@drawable/btn_pickup"
        android:gravity="center"
        android:text="Select Your Medical and Dental Degrees"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />


    <victor.doctorswall.components.MyFontEdittextView
        android:id="@+id/etspecialties_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@null"
        android:ems="10"
        android:gravity="top"
        android:hint="write your specialties here"
        android:lines="4"
        android:maxLines="4"
        android:minLines="4"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_app_gray" />




    <ListView android:id="@+id/listView1" android:layout_width="fill_parent"
        android:layout_height="wrap_content"
  />




</LinearLayout>

    <victor.doctorswall.components.MyFontButton
        android:id="@+id/btnsaveSpecialties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/btn_pickup"
        android:gravity="center"
        android:text="DONE"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />



</LinearLayout>